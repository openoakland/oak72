      %h2
        = t(:image_credits)
    %ul
      %li
        %p
          = t(:photographer_1_html, link:"https://www.flickr.com/photos/64788029@N03/16160905106", target: "_blank")
      %li
        %p
          = t(:photographer_2_html, link:"https://www.flickr.com/photos/29800336@N03/9673165616", target: "_blank")
      %li
        %p
          = t(:photographer_3_html, link:"https://www.flickr.com/photos/gainesville/5123069655", target: "_blank")
