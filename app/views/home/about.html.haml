      %div
        %p
          = t(:our_mission)
    .opening.hero.about-intro
      %h1
        = t(:for_us_by_us)
  .about-data
    %li
      .about-who
        %h2
          = t(:who)
        %p
          = t(:who_p1)
        %p
          = t(:who_p2)
          
    %li
      .about-what
        %h2
          = t(:what)
        %p
          = t(:what_p1)
        %p
          = t(:what_p2)
          
    %li
      .about-why
        %h2
          = t(:why)
        %p
          = t(:why_p1)
        %p
          = t(:why_p2)
          
  .image-credits
