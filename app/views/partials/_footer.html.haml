.footer
	.footer-top
		%p.by-line
			= t(:footer_text)
	.footer-bottom
		%ul.footer-links
			%li.more
				%h2
					= t(:find_out_more)
				%ul
					%li
						%a{href:"/about"}
							= t(:about_us)
					%li
						%a{href:"mailto:#{@city.contact_email}"}
							= t(:contact_us)
					%li
						%a{href:"http://toolkit.sf72.org/", target:"_blank"}
							= t(:city72_toolkit)
			%li.resources
				%h2
					= t(:resources_and_partners)
				%ul.resources-links
					%li.resources-first
						%ul
							- Affiliate.offset(0).limit(4).each do |affiliate|
								%li
									%a{href: "http://#{affiliate.url}", target:"_blank"}
										= affiliate.name
					%li.resources-last
						%ul
							- Affiliate.offset(4).limit(4).each do |affiliate|
								%li
									%a{href: "http://#{affiliate.url}", target:"_blank"}
										= affiliate.name

			%li.social
				%h2
					= t(:spread_the_word)
				%ul
					<a href="https://twitter.com/share" class="twitter-share-button" data-url="#{root_url}">Tweet</a><script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>


